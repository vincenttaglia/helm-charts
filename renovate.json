{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^charts/.+/Chart\\.yaml$"
      ],
      "matchStrings": [
        "appVersion:\\s*\"?(?<currentValue>[^\"\\s]+)\"?[\\s\\S]*?lookupName:\\s*\"?(?<depName>[^\"\\s]+)\"?"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "helmv3": {
    "enabled": true
  },
  "postUpdateOptions": ["bumpChartVersion"],
  "commitMessageExtra": "and update chart to {{newVersion}}"
}